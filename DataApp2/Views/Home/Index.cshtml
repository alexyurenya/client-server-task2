@model IEnumerable<DataApp2.Models.Phone>
@{
    ViewBag.Title = "Main Page";
}
<a asp-action="Create">Add new</a>
<a asp-action="Filtr">Select some</a>
<form asp-action="Logout" asp-controller="Account" asp-anti-forgery="true">

    <div class="form-group">
        <input type="submit" value="Logout" class="btn" />
    </div>

</form>


<table class="table">
    <tr><td>Модель</td><td>Производитель</td><td>Цена</td></tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Company</td>
        <td>@item.Price</td>
        <td>

            <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
            <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Edit</a>
        </td>

    </tr>
       
    }
</table>

